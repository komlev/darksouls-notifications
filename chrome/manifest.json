{
  "manifest_version": 3,
  "name": "Email Sent - Dark Souls Notification",
  "description": "After you send an email through Gmail or Outlook, you'll see a Dark Souls themed notification.",
  "version": "1.2",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webRequest"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*"
      ],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sound.mp3"],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*"
      ]
    }
  ]
}
