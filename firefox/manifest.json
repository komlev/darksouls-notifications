{
  "manifest_version": 2,
  "name": "Email Sent - Dark Souls Notification",
  "description": "After you send an email through Gmail or Outlook, you'll see a Dark Souls themed notification.",
  "version": "1.2",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "webRequest",
    "https://mail.google.com/*",
    "https://outlook.live.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*"
      ],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": ["sound.mp3"]
}
